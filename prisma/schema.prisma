// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  lm              Int               @unique
  name            String
  free_shipping   Boolean
  description     String
  price           Float
  category        Int
  ProccessingLogs ProccessingLogs[]
}

model ProccessingLogs {
  id        String   @unique @default(cuid())
  ready     Boolean
  product   Product  @relation(fields: [productId], references: [lm])
  productId Int      @unique
  createdAt DateTime @default(now())
}
